// Checkout Prisma's documentation
// https://www.prisma.io/docs/getting-started
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SelfRoleList {
  guildId String
  title   String
  id      String       @id @default(uuid())
  choices RoleChoice[]
}

model RoleChoice {
  roleId          String        @id
  ReactionMessage SelfRoleList? @relation(fields: [listId], references: [id])
  listId          String
}

model Badge {
  guildId   String
  badgeName String
  emoji     String
  id        String @id @default(uuid())
}

model SpecialChannel {
  guildId   String
  label     String
  channelId String
  id        String @id @default(uuid())
}

model SpecialRole {
  guildId String
  label   String
  roleId  String
  id      String @id @default(uuid())
}

model Setting {
  id String @id @default(uuid())
  guildId String @unique
  starboardThreshold Int
}

model ModmailMessage {
  guildId      String
  channelId    String?
  content      String
  modmail      Modmail             @relation(fields: [modmailId], references: [id])
  modmailId    String
  senderId     String
  deleted      Boolean             @default(false)
  // This is the member's copy of the message
  memberCopyId String
  // This is the staff's copy of the message
  staffCopyId  String
  // Database copy
  id           String              @id @default(uuid())
  edits        ModmailEdit[]
  attachments  ModmailAttachment[]
}

model ModmailAttachment {
  message   ModmailMessage @relation(fields: [messageId], references: [id])
  messageId String
  url       String
  name      String
  id        String         @id @default(uuid())
}

model ModmailEdit {
  message   ModmailMessage @relation(fields: [messageId], references: [id])
  messageId String
  content   String
  iteration Int
  id        String         @id @default(uuid())
}

model Modmail {
  guildId   String
  channelId String
  // The community member involved.
  memberId  String
  // The user that created the modmail
  authorId  String
  messages  ModmailMessage[]
  closed    Boolean          @default(false)
  id        String           @id @default(uuid())
}

model Starboard {
  guildId String @unique
  messageId String @unique
  starboardMessageId String @unique
  stars Int
  users StarboardReactor[]
  messageContent String
}

model StarboardReactor {
  id String @unique
  messageInteractions Int @default(1) // total amount of times they have reacted or unreacted with a star
  starboard Starboard? @relation(fields: [starboardId], references: [messageId])
  starboardId String?
}